# sln2scons.py autogenerated SConscript
Import('env')
e = env.Clone()
if not e['MYPLATFORM'] == 'winnt':
    e.Append(LIBS='m')
e['CPPPATH'] = ['hunspell/src/hunspell/', 'hunspell/src/win_api/', './']

libhunspell = e.StaticLibrary('libhunspell', ['hunspell\src\win_api\hunspelldll.c', 'hunspell\src\hunspell\affentry.cxx', 'hunspell\src\hunspell\affixmgr.cxx', 'hunspell\src\hunspell\csutil.cxx', 'hunspell\src\hunspell\dictmgr.cxx', 'hunspell\src\hunspell\filemgr.cxx', 'hunspell\src\hunspell\hashmgr.cxx', 'hunspell\src\hunspell\hunspell.cxx', 'hunspell\src\hunspell\hunzip.cxx', 'hunspell\src\hunspell\phonet.cxx', 'hunspell\src\hunspell\replist.cxx', 'hunspell\src\hunspell\suggestmgr.cxx', 'hunspell\src\hunspell\utf_info.cxx'])
e.Default(libhunspell)
e.Install(Dir('#/' + e['MYPLATFORM'] + '/lib/release'), libhunspell)

if 'distclean' in COMMAND_LINE_TARGETS:
    Execute(Delete('libhunspell'))
    Execute(Delete(Dir('#/' + e['MYPLATFORM'] + '/bin/release').abspath + '/' + str(libhunspell[0])))
    Execute(Delete(Glob('*.o')))
    Execute(Delete(Glob('*.so')))
    Execute(Delete(Glob('*.os')))
    Execute(Delete(Glob('*.a')))
    Execute(Delete(Glob('*.la')))
    Execute(Delete(Glob('*.dylib')))

if 'pack' in COMMAND_LINE_TARGETS:
    Execute(Copy(Dir('#/' + e['MYPLATFORM'] + '/bin/release'), libhunspell[0]))
    e.Alias('pack', Dir('#/' + e['MYPLATFORM'] + '/bin/release'))

